<UserControl
    x:Class="SubStyle.Views.WorkspaceView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dtds="using:SubStyle.Views.Dtds"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SubStyle.Models"
    xmlns:services="using:SubStyle.Services"
    xmlns:views="using:SubStyle.Views"
    d:DesignHeight="1200"
    d:DesignWidth="800"
    x:DataType="models:Workspace"
    mc:Ignorable="d"
    >
    <Design.DataContext>
        <dtds:WorkspaceDtd />
    </Design.DataContext>
    <UserControl.Styles>
        <StyleInclude Source="Resources/Styles.axaml" />
        <Style Selector="Border.Pack">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#111" />
            <Setter Property="Background" Value="#111" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
        <Style Selector="TextBlock.PackHeader">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style Selector="ComboBox.PackChooser">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
        <Style Selector="views|PackView">
            <Setter Property="Opacity" Value="1" />
        </Style>
    </UserControl.Styles>
    <Border>
        <StackPanel Orientation="Horizontal">
            <Border Classes="h1 Pack" DockPanel.Dock="Top">
                <DockPanel>
                    <Border Classes="h2" DockPanel.Dock="Top">
                        <TextBlock Classes="PackHeader h2">Mod</TextBlock>
                    </Border>
                    <Border Classes="h2" DockPanel.Dock="Top">
                        <ComboBox
                            Classes="PackChooser"
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding Mods}"
                            PlaceholderText="Select mod to apply"
                            SelectedItem="{Binding SelectedMod}"
                            >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>
                    <views:PackView DataContext="{Binding SelectedMod}" />
                </DockPanel>
            </Border>
            <Border Classes="h1 Pack">
                <DockPanel>
                    <Border Classes="h2" DockPanel.Dock="Top">
                        <TextBlock Classes="PackHeader h2">Scope</TextBlock>
                    </Border>
                    <Border Classes="h2" DockPanel.Dock="Top">
                        <ComboBox
                            Classes="PackChooser"
                            ItemsSource="{Binding Scopes}"
                            PlaceholderText="Select scope to apply the mod onto"
                            SelectedItem="{Binding SelectedScope}"
                            >
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Border>
                    <views:PackView DataContext="{Binding SelectedScope}" />
                </DockPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
