<UserControl
    x:Class="SubStyle.Views.PackView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dtds="using:SubStyle.Views.Dtds"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:SubStyle.Models"
    xmlns:services="using:SubStyle.Services"
    xmlns:views="using:SubStyle.Views"
    Margin="16"
    d:DesignHeight="1600"
    d:DesignWidth="800"
    x:DataType="models:Pack"
    mc:Ignorable="d"
    >
    <Design.DataContext>
        <dtds:PackDtd />
    </Design.DataContext>
    <StackPanel>
        <TextBlock Text="Pack" />
        <TextBlock Text="{Binding Name}" />
        <ItemsControl ItemsSource="{Binding Assets}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:Asset">
                    <views:AssetView />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
